<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="InfoTitleStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#706f6f</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InfoContentStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center|left</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="underlineStyleWidth">
        <item name="android:background">#afafaf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="underlineStyleHeight">
        <item name="android:background">#afafaf</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="underlineLengthHeight">
        <item name="android:background">#868686</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="underlineLengthWidth">
        <item name="android:background">#868686</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="generalTextViewStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
