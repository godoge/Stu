                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="@string/activity_time_table_time_4"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <View style="@style/underlineLengthWidth" />

