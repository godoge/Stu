<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingTop="2dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:elevation="8dp" >

    <LinearLayout
        android:id="@+id/custom_tab_bar_layout_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/custom_tab_bar_iv_course"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/custom_tab_bar_tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fragment_tv_course"
            android:textColor="@color/colorTabBarTextNormal" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/custom_tab_bar_layout_me"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/custom_tab_bar_iv_me"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/custom_tab_bar_tv_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fragment_tv_me"
            android:textColor="@color/colorTabBarTextNormal" />
    </LinearLayout>

</LinearLayout>